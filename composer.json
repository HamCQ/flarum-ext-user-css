{
    "name": "hamcq/usercss",
    "description": "allow user css",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "emin.lin",
            "email": "emin.lin@live.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "HamCQ\\UserCSS\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "User Css",
            "category": "",
            "icon": {
                "name": "fas fa-border-style",
                "color": "",
                "backgroundColor": ""
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": false,
                "prettier": true,
                "typescript": false,
                "bundlewatch": true,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
